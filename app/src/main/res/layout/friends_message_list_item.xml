<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.example.nishant.berry.ui.model.AllUsers" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_list_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user_default_avatar"
            app:layout_constraintBottom_toTopOf="@+id/all_users_list_item_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/all_users_list_item_guideline" />

        <TextView
            android:id="@+id/chat_list_item_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{user.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/all_users_list_item_guideline"
            app:layout_constraintStart_toEndOf="@+id/chat_list_item_avatar"
            tools:text="John Wick" />

        <TextView
            android:id="@+id/chat_list_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:text="@{user.status}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="@+id/chat_list_item_display_name"
            app:layout_constraintTop_toBottomOf="@+id/chat_list_item_display_name"
            tools:text="No one can kill John Wick's dog" />

        <android.support.constraint.Guideline
            android:id="@+id/all_users_list_item_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
    </android.support.constraint.ConstraintLayout>
</layout>